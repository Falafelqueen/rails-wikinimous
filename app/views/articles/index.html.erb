<div class="container">
<h1>Articles</h1>
<% @articles.each do |article| %>
<div class="list-articles">
<%= link_to article.title, article_path(article) %>
<button class="btn btn-action"><%= link_to "Edit", edit_article_path(article) %></button>
</div>
<% end %>
<button class="btn btn-new">
<%= link_to "New", new_article_path %>
</button>
</div>
